<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="djclassifiedspayment"  method="upgrade">
	<name>DJ Classifieds Webcash payment</name>
	<author>DJ-Extensions.com</author>
	<creationDate>January 2015</creationDate>
	<copyright>Copyright (C) 2010 DJ-Extensions.com LTD, All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <authorEmail>raihanhbh@yahoo.com</authorEmail>
	<authorUrl>http://design-joomla.eu</authorUrl>
	<version>3.1</version>
	<description>DJ Classifieds Webcash payment</description>
	<files>
		<filename plugin="djcfWebcash">djcfWebcash.php</filename>
		<folder>djcfWebcash</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_djclassifiedspayment_djcfWebcash.ini</language>
		<language tag="pl-PL">pl-PL.plg_djclassifiedspayment_djcfWebcash.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="email_id" type="text" size="50" default="80000917" label="Merchant id" description="Webcash merchant id"/>
		        <field name="test" type="radio" default="1" label="Test Mode" description="Select No for Production">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="currency_code" type="text" size="50" default="USD" label="Currency code" description="Currency Code Eg.=USD"/>
			</fieldset>
		</fields>
	</config>
</extension>